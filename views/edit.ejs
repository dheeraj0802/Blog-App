<div class="ui main text container segment ">
      <div class="ui huge header">Edit <%=blog.title%></div>
      <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
          <div class="field">
              <label for="">Title</label>
              <input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="Title">
          </div>

          <div class="field">
              <label for="">Image</label>
              <input type="text" name="blog[image]" value="<%=blog.image%>"  placeholder="Image">
          </div>

          <div class="field">
              <textarea name="blog[body]" rows="8" cols="80"><%=blog.body%></textarea>
          </div>



          <input type="submit" name="Submit" value="Submit" class="ui large violet basic button" placeholder="Submit" />
      </form>

</div>


